	cp $(LIBFT) $(NAME)
	ar rcs $(NAME) $(OBJ)

main : $(NAME) $(LIBFT)
	$(CC) main.c -L. -lftprintf
	
clean :
	make -C ./libft clean
	rm -rf $(OBJ)

fclean : clean
	rm -rf $(LIBFT)
	rm -rf $(NAME)

re : fclean all

.PHONY: all clean fclean re