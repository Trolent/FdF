NAME=fdf.a
CC=cc
CFLAGS= -Wall -Wextra -Werror -I$(HEADER)

# ---------------------------------------------------------------------------- #
# ----------------------------------- SRCS ----------------------------------- #
# ---------------------------------------------------------------------------- #
SRC= 


LFT_OBJS = ./libft/

OBJ= $(SRC:.c=.o)
HEADER=./lib
LIBFT=./libft/libft.a

bonus : all

all : $(NAME)

$(OBJ_DIR)/%.o:		%.c
					$(CC) $(CFLAGS) -c $< -o $@ -g

#%.o : %.c $(LIBFT)
#	$(CC) $(CFLAGS) -c $^ -o $@

$(LIBFT) :
	$(MAKE) -C ./libft
	
$(NAME) : $(OBJ) $(LIBFT)

	@echo "\033[1;31m .--..--..--..--..--..--..--..--..--..--..--..--..--..--..--..--."
